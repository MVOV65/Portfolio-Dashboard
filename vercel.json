{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "crons": [
    {
      "path": "/api/cron/news",
      "schedule": "*/30 * * * *"
    },
    {
      "path": "/api/cron/fred",
      "schedule": "0 * * * 1-5"
    },
    {
      "path": "/api/cron/sentiment",
      "schedule": "0 11 * * *"
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)",     "destination": "/index.html" }
  ]
}
